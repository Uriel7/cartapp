<h1>Your Cart</h1>

<% if @cart.empty? %>
	Your cart is currency empty
<% else %>
	<%= link_to 'Empty the Cart', cart_clear_path %>
<% end %>

<% total = 0 %>

<ul>
	<% @cart.each do | id , quantity | %>
		<% product = Product.find(id) %>
		<li>
			<%= link_to product.title, product %>
			<p><%= product.description %>
			<p><%= number_to_currency(product.price, unit: '$') %>
			<p>Quantity: <%= quantity %>
		</li>
		<% total += quantity * product.price %>
	<% end %>
	<p><br><strong>Total:<%= number_to_currency(total, unit: '$') %></strong></p>
</ul>